{
    "name": "hackerembassy-tg-bot",
    "version": "5.0.0",
    "description": "Hacker Embassy management bot",
    "main": "bot.ts",
    "scripts": {
        "build": "tsc --skipLibCheck && tsc-alias",
        "postbuild": "node scripts/postBuild.mjs",
        "start": "node dist/bot.js",
        "start:ci": "node bot.js",
        "start-service:ci": "node embassy.js",
        "start-background": "nohup node dist/bot.js &",
        "start-service": "node dist/embassy.js",
        "start-service-background": "nohup node dist/embassy.js &",
        "embassy-api-service": "/usr/bin/node dist/embassy.js",
        "dev": "tsx watch bot.ts",
        "dev-service": "tsx watch embassy.ts",
        "dev-both": "run-p dev dev-service",
        "stop-embassy-api": "skill -c 'nohup node dist/embassy.js &'",
        "start-api-https": "sudo caddy start --config ./deploy/api/Caddyfile 2>/dev/null",
        "kill": "skill -c nohup node dist/bot.js &",
        "backup": "mkdir ./data/backup -p && cp ./data/db/data.db ./data/backup/data`date +\"%H%M%S%m%d%Y\"`.db 2>/dev/null",
        "prepare": "husky install",
        "lint": "eslint '**/*.{ts,js}'",
        "lint-fix": "eslint '--fix **/*.{ts,js}'",
        "pretty": "prettier --write '**/*.{ts,js}'",
        "test": "jest",
        "test:ci": "jest --collectCoverage",
        "swagger": "npx ts-node ./api/bot/swagger.ts",
        "init": "tsx ./scripts/initDev.ts",
        "migrations": "npx drizzle-kit generate"
    },
    "author": "Nick Kiselev",
    "license": "ISC",
    "dependencies": {
        "better-sqlite3": "^11.9.1",
        "chartjs-to-image": "^1.2.2",
        "config": "^3.3.12",
        "cors": "^2.8.5",
        "cron": "^4.3.0",
        "crypto-convert": "^2.1.7",
        "d": "^1.0.2",
        "dotenv": "^16.5.0",
        "drizzle-kit": "^0.31.0",
        "drizzle-orm": "^0.43.1",
        "easy-currencies": "^1.8.3",
        "express": "^5.1.0",
        "express-prom-bundle": "^8.0.0",
        "fast-csv": "^5.0.2",
        "i18next": "^25.0.1",
        "i18next-fs-backend": "^2.6.0",
        "local-devices": "^4.0.0",
        "luci-rpc": "^1.0.5",
        "luxon": "^3.6.1",
        "memoizee": "^0.4.17",
        "mqtt": "^5.11.1",
        "node-fetch": "^3.3.2",
        "node-html-markdown": "^1.3.0",
        "node-rsa": "^1.1.1",
        "node-ssh": "^13.2.1",
        "node-telegram-bot-api": "^0.66.0",
        "nodemon": "^3.1.10",
        "ping": "^0.4.4",
        "prom-client": "^15.1.3",
        "reflect-metadata": "^0.2.2",
        "rm": "^0.1.8",
        "rrule": "^2.8.1",
        "swagger-ui-express": "^5.0.1",
        "tmp-promise": "^3.0.3",
        "ts-node": "^10.9.2",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0",
        "wol": "^1.0.7"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.8",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.25.1",
        "@jest/globals": "^29.7.0",
        "@types/better-sqlite3": "^7.6.13",
        "@types/config": "^3.3.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/express-prometheus-middleware": "^1.2.3",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.14",
        "@types/luxon": "^3.6.2",
        "@types/memoizee": "^0.4.12",
        "@types/node": "^22.15.2",
        "@types/node-fetch": "^2.6.12",
        "@types/node-rsa": "^1.1.4",
        "@types/node-telegram-bot-api": "^0.64.8",
        "@types/ping": "^0.4.4",
        "@types/rrule": "^2.2.9",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/wol": "^1.0.4",
        "@typescript-eslint/eslint-plugin": "^8.31.0",
        "@typescript-eslint/parser": "^8.31.0",
        "eslint": "^9.25.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-import-resolver-typescript": "^4.3.4",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.6",
        "fs-extra": "^11.3.0",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "jest-fetch-mock": "^3.0.3",
        "lint-staged": "^15.5.1",
        "nock": "^13.5.6",
        "npm-run-all": "^4.1.5",
        "prettier-eslint": "^16.4.1",
        "swagger-autogen": "^2.23.7",
        "ts-jest": "^29.3.2",
        "tsc-alias": "^1.8.15",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3"
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "npx prettier --write",
            "npx eslint --fix"
        ]
    }
}
