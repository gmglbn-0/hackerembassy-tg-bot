{
  "name": "hacker-embassy-bot",
  "version": "2.0.0",
  "description": "Hacker Embassy management bot",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "embassy-tunnel": "ssh -f -NR 8001:127.0.0.1:8001 root@nickkiselev.me -o ServerAliveInterval=30 -o ServerAliveCountMax=3 -o ExitOnForwardFailure=yes",
    "embassy-api": "npm run embassy-tunnel && nohup node embassyApi.js &",
    "embassy-api-service": "/usr/bin/npm run embassy-tunnel && /usr/bin/node embassyApi.js",
    "stop-embassy-api": "skill -c 'nohup node embassyApi.js &'",
    "git": "git add * && git commit && git push",
    "git-redo": "git add * && git commit --amend && git push --force",
    "update-and-start": "npm run kill && git pull && npm i && npm run start-bot && npm run start-api-https",
    "start-bot": "nohup node app.js &",
    "start-api-https": "caddy start --config ./deploy/api/Caddyfile 2>/dev/null",
    "kill": "skill -c nohup node app.js &",
    "backup": "mkdir ./data/.backup -p && cp ./data/data.db ./data/.backup/data`date +\"%H%M%S%m%d%Y\"`.db 2>/dev/null",
    "reset": "mkdir ./data/.backup -p && mv ./data/data.db ./data/.backup/data`date +\"%H%M%S%m%d%Y\"`.db 2>/dev/null && cp ./data/sample.db ./data/data.db",
    "init": "cp ./data/sample.db ./data/data.db && echo HACKERBOTTOKEN=\"replace_with_bot_father_token\" > .env"
  },
  "author": "Nick Kiselev",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^8.0.1",
    "body-parser": "^1.20.1",
    "chartjs-to-image": "^1.1.0",
    "config": "^3.3.8",
    "cors": "^2.8.5",
    "crypto-convert": "^2.1.4",
    "d": "^1.0.1",
    "dotenv": "^16.0.3",
    "easy-currencies": "^1.7.0",
    "express": "^4.18.2",
    "fast-csv": "^4.3.6",
    "local-devices": "^4.0.0",
    "luci-rpc": "^1.0.5",
    "mqtt": "^4.3.7",
    "node-fetch": "^2.6.8",
    "node-rsa": "^1.1.1",
    "node-telegram-bot-api": "^0.60.0",
    "nodemon": "^2.0.20",
    "winston": "^3.8.2"
  }
}
