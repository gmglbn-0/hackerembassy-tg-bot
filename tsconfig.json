{
    "compilerOptions": {
      "outDir": "./dist",
      "allowJs": true,
      "target": "ES2022",
      "lib": ["ES2023"],
      "module": "None",
      "moduleResolution": "Node",
      "noImplicitReturns": true,
      "strict": true,
      "esModuleInterop": true,
      "typeRoots" : ["./node_modules/@types", "./typings"],
      "baseUrl": ".",
      "paths": {
            "@utils/*": ["utils/*"],
            "@services/*": ["services/*"],
            "@data/*": ["data/*"],
            "@repositories/*": ["repositories/*"],
            "@config": ["config/schema"],
            "@hackembot/*": ["bot/*"],
            "@hackemapi/*": ["api/*"],
      }   
    },
    "tsc-alias": {
      "replacers": {
        "base-url": {
          "enabled": false
        }
      }
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "coverage", "dist"]
}